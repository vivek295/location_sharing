<% provide(:title, 'Password Reset') %>

<div class="container form-container">
    <div class="offset-md-3 col-md-6">
      <div class="card">
        <div class="card-header">Login</div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name),html: {class: 'form-horizontal', role: 'form'}) do |f| %>
            <div class="form-group">
              <%= f.label :email, class: "col-sm-3 control-label" %>
              <div class="col-sm-12">
                <%= f.email_field :email, class: "form-control" %>
              </div>
            </div>
            <div class="form-group last">
              <div class="col-sm-12">
                <%= f.submit "Send me reset password instructions", class: "btn btn-success btn-sm" %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="card-footer">
          <div>Already Registred? <%= link_to "Log in", new_session_path(resource_name) %><br /></div>
          <div>New User? <%= link_to "Sign up", new_registration_path(resource_name) %><br /></div>
        </div>
      </div>
    </div>
</div>
